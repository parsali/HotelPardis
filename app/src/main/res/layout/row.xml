<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1dcdcdc"
    android:orientation="horizontal"

    tools:context="ir.farabi.hotelpardis.reserve">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"

        android:layout_height="130dp"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:id="@+id/imageHotel"
                    android:scaleType="centerCrop"
                    android:src="@drawable/luxury" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/type"
                        android:text="اتاق لوکس" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textSize="15sp"
                        android:id="@+id/name"
                        android:text="علی"
                        android:layout_below="@+id/type"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textVurud"
                        android:layout_height="wrap_content"
                        android:text="ورود"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:layout_alignBaseline="@+id/textVurud"
                        android:id="@+id/startDate"
                        android:textSize="13sp"
                        android:layout_marginRight="8dp"
                        android:text="28/11/96"
                        android:layout_toLeftOf="@+id/textVurud"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/name"

                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textkhuruj"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/startDate"
                        android:text="خروج"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:id="@+id/khurujDate"
                        android:textColor="@color/colorAccent"
                        android:layout_marginRight="8dp"
                        android:layout_alignBaseline="@+id/textkhuruj"
                        android:text="28/11/96"
                        android:layout_toLeftOf="@+id/textkhuruj"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_height="wrap_content">
                <Button
                    android:layout_gravity="left"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:layout_width="30dp"
                    android:onClick="cancel"
                    android:id="@+id/cancel"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="کنسل"

                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:id="@+id/price"
                    android:layout_height="wrap_content"
                    android:text="8987"
                    android:textStyle="italic"
                    android:layout_weight="1"
                    />
                <TextView
                    android:gravity="right"
                    android:text="هزینه"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
